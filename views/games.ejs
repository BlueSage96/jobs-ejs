<%- include("partials/header.ejs") %>
    <%- include("partials/footer.ejs") %>
    <h2>Games List</h2>
    <table id="Games-table">
        <tr id="Games-table-header">
            <th>Difficulty</th>
            <th>Mistakes</th>
            <th>Hints</th>
            <th>Status</th>
            <th colspan="2"></th>
        </tr>
        <% if (games && games.length) { %>
            <% games.forEach((game)=> { %>
                <tr>
                    <td>
                        <%= game.difficulty %>
                    </td>
                    <td>
                        <%= game.mistakes %>
                    </td>
                    <td>
                        <%= game.usedHints %>
                    </td>
                    <td>
                        <%= game.status %>
                    </td>
                    <td>
                       <a href="/games/edit/<%= game.id %>">
                        <button type="button">edit</button>
                       </a>  
                    </td>
                   <!-- check hw example for delete -->
                    <td>
                      <a href="/games/delete/<%= game.id %>">
                        <button type="button">delete</button>
                      </a> 
                    </td>
                   
                </tr>
                <% }) %>
                    <% } %>
    </table>